<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Formulaire</title>
    <link rel="stylesheet" href="{{ asset('Assets/css/style.css') }}">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
</head>
<body>

    {# Pour transmettre le formulaire sur la page html.twig, on utilise la fonction twig form() dans laquelle on insère la variable
formview made in ArticlesController (envoyée depuis le Controller)#}
{#    {{ form(formview) }}#}

    <section id="formulaire" class="d-flex justify-content-center align-items-center mx-5 my-5">

        <div>
            <h1 class="my-5"> Formulaire </h1>

        {{ form_start(formview) }}
            <div class="d-flex flex-column justify-content-center align-items-center">


                <div class="form-group">
                    <div class="label">{{ form_label(formview.title) }}</div>
                    {{ form_widget(formview.title) }}
                    {{ form_errors(formview.title) }}
                </div>
                <div class="form-group">
                    <div class="label">{{ form_label(formview.content) }}</div>
                    {{ form_widget(formview.content) }}
                    {{ form_errors(formview.content) }}

                </div>
                <div class="form-group">
                    <div class="label">{{ form_label(formview.image) }}</div>
                    {{ form_widget(formview.image) }}
                    {{ form_errors(formview.image) }}

                </div>

                <div class="form-group">
                    <div class="label">{{ form_label(formview.publicationDate) }}</div>
                    {{ form_widget(formview.publicationDate) }}
                    {{ form_errors(formview.publicationDate) }}

                </div>
                <div class="form-group">
                    <div class="label">{{ form_label(formview.creationDate) }}</div>
                    {{ form_widget(formview.creationDate) }}
                    {{ form_errors(formview.creationDate) }}

                </div>
                <div class="form-group">
                    <div class="label">{{ form_label(formview.isPublished) }}</div>
                    {{ form_widget(formview.isPublished) }}
                    {{ form_errors(formview.isPublished) }}

                </div>

                <div class="form-group ">
                    {{ form_row(formview.submit, {'attr' : {'class': 'button'}}) }}

                </div>

            </div>

        {{ form_end(formview) }}

        </div>

    </section>

    </body>
</html>